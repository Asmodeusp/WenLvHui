<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/H8"
    android:orientation="vertical"
    tools:context=".view.space.SpaceDetalisActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/H3">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/SpaceDetalisReturnButton"
            android:layout_width="@dimen/px_80"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/px_50"
                android:layout_height="@dimen/px_50"
                android:src="@mipmap/goback" />
        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/px_220"
            android:layout_marginRight="@dimen/px_220"
            android:orientation="horizontal"

            android:weightSum="2">

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/SpaceDetalisGuanCangButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/SpaceDetalisGuanCangText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_15"
                    android:text="馆藏"
                    android:textColor="#fff"
                    android:textSize="@dimen/px_30" />

                <View

                    android:id="@+id/SpaceDetalisGuanCangLine"
                    android:layout_width="@dimen/px_59"
                    android:layout_height="@dimen/px_9"
                    android:layout_alignParentBottom="true"
                    android:background="@color/H2"></View>
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/SpaceDetalisDongTaiButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/SpaceDetalisDongTaiText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_15"
                    android:text="动态"
                    android:textColor="#fff"
                    android:textSize="@dimen/px_30" />

                <View
                    android:id="@+id/SpaceDetalisDongTaiLine"
                    android:layout_width="@dimen/px_59"
                    android:layout_height="@dimen/px_9"
                    android:layout_alignParentBottom="true"
                    android:background="@color/H2"></View>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <FrameLayout
        android:id="@+id/SpaceDetalisFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</com.zhy.autolayout.AutoLinearLayout>