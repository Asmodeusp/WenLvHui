<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".view.home.travelroute.TravelRouteActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/H3">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/TravelRouteReturnButton"
            android:layout_width="@dimen/px_80"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/px_50"
                android:layout_height="@dimen/px_50"
                android:src="@mipmap/goback" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/TravelRouteShaiXuanButton"
            android:layout_width="@dimen/px_80"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/px_50"
                android:layout_height="@dimen/px_50"
                android:src="@mipmap/screen" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="文旅路线"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/px_30" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="1070px"
        android:layout_marginTop="@dimen/px_80">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TravelRoute_SerchEd"
                android:layout_width="595px"
                android:layout_height="40px"
                android:layout_marginTop="@dimen/px_32"
                android:layout_marginBottom="@dimen/px_30"
                android:background="@drawable/serchshape"
                android:gravity="center"
                android:text="大家正在搜：乡间组团游"
                android:textColor="@color/H6" />

            <ImageView
                android:id="@+id/TravelRoute_FirstImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_350"
                android:scaleType="fitXY" />

            <android.support.v4.view.ViewPager
                android:id="@+id/TravelRoute_Viewpager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_130"
                android:layout_marginTop="@dimen/px_44"></android.support.v4.view.ViewPager>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="6px"
                android:layout_marginTop="@dimen/px_20">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="110px"
                    android:layout_height="6px"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal">

                    <View
                        android:id="@+id/Line_One"
                        android:layout_width="40px"
                        android:layout_height="6px"
                        android:background="@color/H2"></View>

                    <View
                        android:id="@+id/Line_Two"
                        android:layout_width="40px"
                        android:layout_height="6px"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@color/H1"></View>

                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_28"
                    android:layout_marginTop="@dimen/px_30"
                    android:layout_marginBottom="@dimen/px_18"
                    android:text="精品"
                    android:textColor="@color/H5"
                    android:textSize="@dimen/px_30" />
            </com.zhy.autolayout.AutoLinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/TravelRoute_JINPINRecy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_28"
                android:layout_marginRight="@dimen/px_28"></android.support.v7.widget.RecyclerView>

        </com.zhy.autolayout.AutoLinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/px_10"
        android:background="#00000000"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView

            android:layout_width="@dimen/px_57"
            android:layout_height="@dimen/px_57"
            android:src="@mipmap/youjifabu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_10"
            android:text="发布游记"
            android:textColor="@color/H2"
            android:textSize="@dimen/px_22" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>