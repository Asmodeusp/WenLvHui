<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginLeft="@dimen/px_28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wlbdImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/first" />

        <TextView
            android:id="@+id/wlbdText"
            android:layout_marginTop="@dimen/px_36"
            android:layout_marginBottom="@dimen/px_36"
            android:text="hhhhh"
            android:layout_marginLeft="@dimen/px_28"
            android:textSize="@dimen/px_22"
            android:textColor="@color/H4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:id="@+id/wlbdSeeText"
        android:layout_marginTop="@dimen/px_36"
        android:layout_marginBottom="@dimen/px_36"
        android:text="hhhhh"
        android:layout_marginRight="@dimen/px_28"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/px_28"
        android:textSize="@dimen/px_22"
        android:textColor="@color/H4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />
</com.zhy.autolayout.AutoRelativeLayout>