<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/photo"
    android:orientation="vertical"
    tools:context=".view.login.LoginActivity">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="408px"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/LoginPhoneNumber"
            android:layout_width="462px"
            android:layout_height="wrap_content"
            android:theme="@style/MyEditText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@mipmap/username"
            android:drawablePadding="24px"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:padding="24px"
            android:textColor="@color/H2"
            android:textColorHint="#ffffff"
            android:textCursorDrawable="@drawable/editcursor"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px">

        <EditText
            android:id="@+id/LoginInputPassword"
            android:layout_width="462px"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@mipmap/password"
            android:drawablePadding="24px"
            android:hint="请输入密码"
            android:theme="@style/MyEditText"
            android:inputType="textPassword"
            android:padding="24px"
            android:textColor="@color/H2"
            android:textColorHint="#ffffff"
            android:textCursorDrawable="@drawable/editcursor"
            android:textSize="@dimen/px_24" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="188px"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/Loginloginbtn"
            android:layout_width="460px"
            android:layout_height="69px"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:background="@drawable/loginbutton"
            android:text="登录 "
            android:textColor="#ffffff"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_144"
        android:layout_marginTop="54px"
        android:layout_marginRight="@dimen/px_144">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/loginRegisterBtn"
            android:layout_width="@dimen/px_200"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textColor="#ffffff"
                android:textSize="@dimen/px_24" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/LoginForgetPasswordBtn"
            android:layout_width="@dimen/px_200"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="忘记密码"
                android:textColor="#ffffff"
                android:textSize="@dimen/px_24"
                android:layout_alignParentRight="true" />

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>