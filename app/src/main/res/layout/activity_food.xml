<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/H8"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".view.home.localcuisine.FoodActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/H3">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/Food_ReturnButton"
            android:layout_width="@dimen/px_80"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/px_50"
                android:layout_height="@dimen/px_50"
                android:src="@mipmap/goback" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/Food_ShareButton"
            android:layout_width="@dimen/px_80"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/px_50"
                android:layout_height="wrap_content"
                android:src="@mipmap/share" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/Food_RestaurantNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="文创非遗"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/px_30" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <ImageView
        android:id="@+id/Food_FoodIamge"
        android:layout_width="match_parent"
        android:layout_height="429px" />

    <TextView
        android:id="@+id/Food_FoodNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_40"
        android:text="胡桃里"
        android:textColor="@color/H5"
        android:textSize="@dimen/px_24" />

    <TextView
        android:id="@+id/Food_FoodDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_28"
        android:layout_marginTop="@dimen/px_34"
        android:layout_marginRight="@dimen/px_28" />

    <TextView
        android:layout_width="428px"
        android:layout_height="@dimen/px_69"
        android:background="@drawable/loginbutton"
        android:gravity="center"
        android:text="购券优惠"
        android:textColor="@color/H8"
        android:textSize="@dimen/px_30" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:layout_marginTop="@dimen/px_76"
        android:background="@color/H4"></View>
</com.zhy.autolayout.AutoLinearLayout>