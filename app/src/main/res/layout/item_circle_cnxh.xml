<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/px_45"
    android:gravity="center_horizontal"
    android:layout_marginRight="@dimen/px_25"
    android:layout_marginLeft="@dimen/px_25"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/CircleCNXH_CircleImage"
        android:layout_width="@dimen/px_200"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/px_100" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="@dimen/px_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/CircleCNXH_CircleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="4"
            android:singleLine="true"
            android:text="绘画的与"
            android:textColor="@color/H5"
            android:textSize="@dimen/px_22" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="4"
            android:layout_marginLeft="@dimen/px_14"
            android:singleLine="true"
            android:text="|"
            android:layout_marginRight="@dimen/px_14"
            android:textColor="@color/H5"
            android:textSize="@dimen/px_22" />

        <TextView
            android:id="@+id/CircleCNXH_CircleTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="绘画"
            android:textColor="@color/H5"
            android:textSize="@dimen/px_22" />
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:id="@+id/CircleCNXH_Circlefollew"
        android:layout_marginTop="@dimen/px_30"
        android:text="+关注"
        android:textSize="@dimen/px_20"
        android:gravity="center"
        android:textColor="@color/H2"
        android:background="@drawable/tag"
        android:layout_width="86px"
        android:layout_height="@dimen/px_26" />
</com.zhy.autolayout.AutoLinearLayout>