<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".view.activity.ActivityFragment">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/H3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="活动"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/px_30" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Activity_HeadImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_358"
                android:scaleType="fitXY" />

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/group"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="5">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/Activity_HuiMinButton"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/px_60"
                        android:layout_height="@dimen/px_60"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20px"
                        android:src="@mipmap/huiming" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_14"
                        android:text="惠民"
                        android:textColor="@color/H3"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/Activity_YanChuButton"
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/px_60"
                        android:layout_height="@dimen/px_60"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20px"
                        android:src="@mipmap/yanchu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_14"
                        android:text="演出"
                        android:textColor="@color/H3"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/Activity_SheQuButton"
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/px_60"
                        android:layout_height="@dimen/px_60"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20px"
                        android:src="@mipmap/shequ" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_14"
                        android:text="社区"
                        android:textColor="@color/H3"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/Activity_QinZiButton"
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/px_60"
                        android:layout_height="@dimen/px_60"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20px"
                        android:src="@mipmap/qinzi" />

                    <TextView
                        android:id="@+id/CircleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_14"
                        android:text="亲子"
                        android:textColor="@color/H3"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/Activity_LiShiButton"
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/px_60"
                        android:layout_height="@dimen/px_60"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20px"
                        android:src="@mipmap/lishi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_14"
                        android:text="历史"
                        android:textColor="@color/H3"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:orientation="horizontal"
                android:weightSum="4">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/Activity_ZhiNengPaiXuButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/px_80"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="智能排序"
                        android:textColor="@color/H3"
                        android:textSize="20px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:src="@mipmap/sort" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/Activity_ZhuangTaiPaiXuButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/px_80"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="状态排序"
                        android:textColor="@color/H3"
                        android:textSize="20px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:src="@mipmap/sort" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/Activity_LeiBiePaiXuButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/px_80"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="类别排序"
                        android:textColor="@color/H3"
                        android:textSize="20px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:src="@mipmap/sort" />

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="@dimen/px_80"
                    android:background="@color/H1"></View>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/px_80"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/Activity_RILIButton"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/px_44"
                            android:layout_height="@dimen/px_44"
                            android:src="@mipmap/rili" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="日历"
                            android:textColor="@color/H3"
                            android:textSize="20px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/Activity_DITuButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/px_44"
                            android:layout_height="@dimen/px_44"
                            android:src="@mipmap/map" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地图"
                            android:textColor="@color/H3"
                            android:textSize="20px" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:id="@+id/Activity_ActivityRefreshLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/Activity_ActivityRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/px_28"
                        android:layout_marginRight="@dimen/px_28"></android.support.v7.widget.RecyclerView>
                </com.scwang.smartrefresh.layout.SmartRefreshLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <com.zhy.autolayout.AutoLinearLayout

                        android:id="@+id/Activity_ZhiNengPaiXuTextLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/H8"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <TextView
                            android:id="@+id/Activity_ZUIXINText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_50"
                            android:background="@drawable/wenzishape"
                            android:gravity="center"
                            android:text="最新"

                            android:textColor="@color/H3"
                            android:textSize="20px" />

                        <TextView
                            android:id="@+id/Activity_ZUIREText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_50"
                            android:background="@drawable/wenzishape"
                            android:gravity="center"
                            android:text="最热"
                            android:textColor="@color/H3"
                            android:textSize="20px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:background="@color/H8"
                        android:id="@+id/Activity_ZhuangTaiPaiXuLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <TextView
                            android:id="@+id/Activity_WeiKaiShiText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_50"
                            android:background="@drawable/wenzishape"
                            android:gravity="center"
                            android:text="未开始"
                            android:textColor="@color/H3"
                            android:textSize="20px" />

                        <TextView
                            android:id="@+id/Activity_JinXinZhongText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_50"
                            android:background="@drawable/wenzishape"
                            android:gravity="center"
                            android:text="进行中"
                            android:textColor="@color/H3"
                            android:textSize="20px" />

                        <TextView
                            android:id="@+id/Activity_YiJieshuText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_50"
                            android:background="@drawable/wenzishape"
                            android:gravity="center"
                            android:text="已结束"
                            android:textColor="@color/H3"
                            android:textSize="20px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/Activity_LeiBiePaiXuLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/H8"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <TextView
                            android:id="@+id/Activity_HuiminText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_50"
                            android:background="@drawable/wenzishape"
                            android:gravity="center"
                            android:text="惠民"
                            android:textColor="@color/H3"
                            android:textSize="20px" />

                        <TextView
                            android:id="@+id/Activity_YanChuText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_50"
                            android:background="@drawable/wenzishape"
                            android:gravity="center"
                            android:text="演出"
                            android:textColor="@color/H3"
                            android:textSize="20px" />

                        <TextView
                            android:id="@+id/Activity_SheQuText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_50"
                            android:background="@drawable/wenzishape"
                            android:gravity="center"
                            android:text="社区"
                            android:textColor="@color/H3"
                            android:textSize="20px" />

                        <TextView
                            android:id="@+id/Activity_QinZiText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_50"
                            android:background="@drawable/wenzishape"
                            android:gravity="center"
                            android:text="亲子"
                            android:textColor="@color/H3"
                            android:textSize="20px" />

                        <TextView
                            android:id="@+id/Activity_LiShiText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_50"
                            android:background="@drawable/wenzishape"
                            android:gravity="center"
                            android:text="历史"
                            android:textColor="@color/H3"
                            android:textSize="20px" />

                    </com.zhy.autolayout.AutoLinearLayout>


                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/px_80"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2"></com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>


            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoLinearLayout>
    </android.support.v4.widget.NestedScrollView>


</com.zhy.autolayout.AutoLinearLayout>