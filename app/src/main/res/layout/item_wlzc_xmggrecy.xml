<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="28px"
    android:layout_marginTop="@dimen/px_28"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itme_wlzc_xmggrecyfenlieText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="综合"
            android:textColor="@color/H3"

            android:textSize="@dimen/px_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" |   "
            android:textColor="@color/H3"
            android:textSize="@dimen/px_24" />

        <TextView
            android:id="@+id/itme_wlzc_xmggrecyTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hhhhhhhhhhhhhh "
            android:textColor="@color/H3"
            android:textSize="@dimen/px_24" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_marginBottom="@dimen/px_24"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itme_wlzc_xmggrecyDataText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2018年12月60日"
            android:textColor="@color/H4"
            android:textSize="@dimen/px_18" />

        <TextView
            android:id="@+id/itme_wlzc_xmggrecyFromText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px_10"
            android:text="转自：中国人民网"
            android:textColor="@color/H4"
            android:textSize="@dimen/px_18" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/px_18"
                android:src="@mipmap/goin" />
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/itme_wlzc_xmggrecyIsLikeButton"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/itme_wlzc_xmggrecyIsLikeImage"
                android:layout_width="wrap_content"
                android:src="@mipmap/dianzan_pass"
                android:layout_height="wrap_content" />
            <TextView
                android:text="1923"
                android:layout_marginLeft="10px"
                android:id="@+id/itme_wlzc_xmggrecyIsLikeNumText"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/H4"
                android:textSize="@dimen/px_18"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/itme_wlzc_xmggrecyCommentButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/itme_wlzc_xmggrecyCommentImage"
                android:layout_width="wrap_content"
                android:src="@mipmap/comment"
                android:layout_height="wrap_content" />
            <TextView
                android:text="1923"
                android:layout_marginLeft="10px"
                android:id="@+id/itme_wlzc_xmggrecyCommentNumText"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/H4"
                android:textSize="@dimen/px_18"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
             android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/H4"
                android:text="浏览量："

                android:textSize="@dimen/px_18" />
            <TextView
                android:text="1923"
                android:layout_marginLeft="10px"
                android:id="@+id/itme_wlzc_xmggrecySeeNumText"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/H4"
                android:textSize="@dimen/px_18"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_marginTop="@dimen/px_2"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/H4"></View>
</com.zhy.autolayout.AutoLinearLayout>