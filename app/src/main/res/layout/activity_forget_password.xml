<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/photo"
    tools:context=".view.login.ForgetPasswordActivity">
    <com.zhy.autolayout.AutoRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/ForgetPassword_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="24px"
            android:src="@mipmap/goback" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="408px"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/ForgetPasswordPhoneNumber"
            android:layout_width="462px"
            android:layout_height="wrap_content"
            android:theme="@style/MyEditText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@mipmap/username"
            android:drawablePadding="24px"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:padding="24px"
            android:textColor="@color/H2"
            android:textColorHint="#ffffff"
            android:textCursorDrawable="@drawable/editcursor"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_gravity="center"
        android:layout_width="462px"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px">

        <EditText
            android:id="@+id/ForgetPasswordInputPassword"
            android:layout_width="462px"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:inputType="phone"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@mipmap/password"
            android:drawablePadding="24px"
            android:hint="请输入验证码"
            android:theme="@style/MyEditText"
            android:padding="24px"
            android:textColor="@color/H2"
            android:textColorHint="#ffffff"
            android:textCursorDrawable="@drawable/editcursor"
            android:textSize="@dimen/px_24" />

        <TextView
            android:id="@+id/ForgetPassword_PhotoCodeText"
            android:layout_width="@dimen/px_200"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ForgetPasswordInputPassword"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/text_cursor"
            android:gravity="center"
            android:padding="@dimen/px_10"
            android:text="获取验证码"
            android:textColor="#fff"
            android:textSize="24px" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="158px"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/ForgetPasswordForgetPasswordbtn"
            android:layout_width="460px"
            android:layout_height="69px"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:background="@drawable/loginbutton"
            android:text="重置密码 "
            android:textColor="#ffffff"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoLinearLayout>
    
</com.zhy.autolayout.AutoLinearLayout>