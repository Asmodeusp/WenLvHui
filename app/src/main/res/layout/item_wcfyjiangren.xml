<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/H7"
    android:orientation="horizontal">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/item_wcfyjiangrenHeadImage"
        android:layout_width="145px"
        android:layout_height="145px"
        android:layout_marginLeft="28px"
        android:layout_marginTop="32px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_32"

        android:orientation="vertical">

        <TextView
            android:id="@+id/item_wcfyjiangrenNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36px"
            android:layout_marginTop="34px"
            android:text="村田陶艺工作室"
            android:textColor="@color/H5"
            android:textSize="24px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="66px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36px"
                android:text="作品："
                android:textColor="@color/H4"
                android:textSize="18px" />

            <TextView
                android:id="@+id/item_wcfyjiangrenWorksNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="1234"
                android:textColor="@color/H4"
                android:textSize="18px" />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="104px"
                android:src="@mipmap/seenumber" />

            <TextView
                android:id="@+id/item_wcfyjiangrenSeeNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="点赞数量"
                android:textColor="@color/H4"
                android:textSize="18px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:visibility="gone"
                android:id="@+id/item_wcfyjiangrenIsLikeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_wcfyjiangrenIsLikeImage"
                    android:layout_width="@dimen/px_25"
                    android:layout_height="@dimen/px_25"
                    android:layout_marginLeft="93px"
                    android:src="@mipmap/dianzan" />

                <TextView
                    android:id="@+id/item_wcfyjiangrenIsLikeNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="收藏"
                    android:textColor="@color/H4"
                    android:textSize="18px" />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>