<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/item_wypxrecyImage"
        android:layout_width="@dimen/px_145"
        android:layout_height="@dimen/px_145"
        android:layout_marginLeft="@dimen/px_28"
        android:layout_marginTop="@dimen/px_30" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_38"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_wypxrecyNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_68"
            android:text="qwertyuiop;"
            android:textColor="@color/H5"
            android:textSize="@dimen/px_30" />

        <com.zhy.autolayout.AutoLinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_56">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/item_wypxrecyIsLikeButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_wypxrecyIsLikeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dianzan" />

                <TextView
                    android:id="@+id/item_wypxrecyIsLikeNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_2"
                    android:text="1234"
                    android:textColor="@color/H4"
                    android:textSize="@dimen/px_20" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
               android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="@dimen/px_50"
                    android:layout_height="@dimen/px_50"
                    android:src="@mipmap/location" />

                <TextView
                    android:id="@+id/item_wypxrecyAddressText"
                    android:layout_marginLeft="@dimen/px_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:textColor="@color/H4"
                    android:textSize="@dimen/px_20" />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>