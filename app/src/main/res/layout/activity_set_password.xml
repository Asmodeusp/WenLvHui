<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/photo"
    android:orientation="vertical"
    tools:context=".view.login.SetPasswordActivity">

    <com.zhy.autolayout.AutoRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/SetPassword_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="24px"
            android:src="@mipmap/goback" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="408px"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/SetPasswordPhoneNumber"
            android:layout_width="462px"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@mipmap/password"
            android:drawablePadding="24px"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:padding="24px"
            android:textColor="@color/H2"
            android:textColorHint="#ffffff"
            android:textCursorDrawable="@drawable/editcursor"
            android:textSize="24px"
            android:theme="@style/MyEditText" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="462px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40px">

        <EditText
            android:id="@+id/SetPasswordInputPassword"
            android:layout_width="462px"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@mipmap/password"
            android:drawablePadding="24px"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:padding="24px"
            android:textColor="@color/H2"
            android:textColorHint="#ffffff"
            android:textCursorDrawable="@drawable/editcursor"
            android:textSize="@dimen/px_24"
            android:theme="@style/MyEditText" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:textSize="@dimen/px_12"
        android:textColor="@color/H7"
        android:gravity="center"
        android:text="密码(以字母开头，长度在6~18之间，只能包含字母、数字和下划线)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="158px"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/SetPasswordSetPasswordbtn"
            android:layout_width="460px"
            android:layout_height="69px"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:background="@drawable/loginbutton"
            android:text="确定 "
            android:textColor="#ffffff"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>