<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/H7"
    android:orientation="vertical"
    tools:context=".view.home.prefebook.RecommendedBooksActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/H3">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/RecommendedBooksReturnButton"
            android:layout_width="@dimen/px_80"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/px_50"
                android:layout_height="@dimen/px_50"
                android:src="@mipmap/goback" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/RecommendedBooksShaiXuanButton"
            android:layout_width="@dimen/px_80"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <ImageView
                android:visibility="gone"
                android:layout_width="@dimen/px_50"
                android:layout_height="@dimen/px_50"
                android:src="@mipmap/screen" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="好书推荐"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/px_30" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:visibility="gone"
                android:id="@+id/RecommendedBooks_SerchEd"
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_marginLeft="76px"
                android:layout_marginTop="@dimen/px_24"
                android:layout_marginRight="@dimen/px_76"
                android:layout_marginBottom="@dimen/px_37"
                android:background="@drawable/serchshape"
                android:gravity="center"
                android:text="大家正在搜：三体"
                android:textColor="@color/H6" />

            <com.zhy.autolayout.AutoRelativeLayout

                android:layout_width="match_parent"
                android:layout_height="74px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px_30"
                    android:text="好书推荐"
                    android:textColor="@color/H3" />

                <ImageView
                    android:id="@+id/RecommendedBooks_HstjRefreshButton"
                    android:layout_width="@dimen/px_50"
                    android:layout_height="@dimen/px_50"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px_28"
                    android:src="@mipmap/refresh" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/RecommendedBooks_HstjBookButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_28"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/RecommendedBooks_HstjBookImage"
                        android:layout_width="@dimen/px_176"
                        android:layout_height="@dimen/px_220"
                        android:scaleType="fitXY"
                        android:src="@mipmap/photo" />

                    <TextView
                        android:id="@+id/RecommendedBooks_HstjBookNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_26"
                        android:text="三体"
                        android:textColor="@color/H3"
                        android:textSize="@dimen/px_24" />

                    <TextView
                        android:id="@+id/RecommendedBooks_HstjBookAutherText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/kk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px_31">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView

                                android:id="@+id/RecommendedBooks_HstjBookStartOne"
                                android:layout_width="@dimen/px_25"
                                android:layout_height="@dimen/px_25"
                                android:src="@mipmap/start" />

                            <ImageView
                                android:id="@+id/RecommendedBooks_HstjBookStartTwo"
                                android:layout_width="@dimen/px_25"
                                android:layout_height="@dimen/px_25"
                                android:layout_marginRight="@dimen/px_0_5"
                                android:src="@mipmap/start" />

                            <ImageView
                                android:id="@+id/RecommendedBooks_HstjBookStartThree"
                                android:layout_width="@dimen/px_25"
                                android:layout_height="@dimen/px_25"
                                android:layout_marginRight="@dimen/px_0_5"
                                android:src="@mipmap/start" />

                            <ImageView
                                android:id="@+id/RecommendedBooks_HstjBookStartFour"
                                android:layout_width="@dimen/px_25"
                                android:layout_height="@dimen/px_25"
                                android:layout_marginRight="@dimen/px_0_5"
                                android:src="@mipmap/start" />

                            <ImageView
                                android:id="@+id/RecommendedBooks_HstjBookStartFive"
                                android:layout_width="@dimen/px_25"
                                android:layout_height="@dimen/px_25"
                                android:layout_marginRight="@dimen/px_0_5"
                                android:src="@mipmap/start" />
                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/RecommendedBooks_HstjBookKStartOne"
                                android:layout_width="@dimen/px_25"
                                android:layout_height="@dimen/px_25"
                                android:src="@mipmap/kongstart" />

                            <ImageView
                                android:id="@+id/RecommendedBooks_HstjBookKStartTwo"
                                android:layout_width="@dimen/px_25"
                                android:layout_height="@dimen/px_25"
                                android:layout_marginRight="@dimen/px_0_5"
                                android:src="@mipmap/kongstart" />

                            <ImageView
                                android:id="@+id/RecommendedBooks_HstjBookKStartThree"
                                android:layout_width="@dimen/px_25"
                                android:layout_height="@dimen/px_25"
                                android:layout_marginRight="@dimen/px_0_5"
                                android:src="@mipmap/kongstart" />

                            <ImageView
                                android:id="@+id/RecommendedBooks_HstjBookKStartFour"
                                android:layout_width="@dimen/px_25"
                                android:layout_height="@dimen/px_25"
                                android:layout_marginRight="@dimen/px_0_5"
                                android:src="@mipmap/kongstart" />

                            <ImageView
                                android:id="@+id/RecommendedBooks_HstjBookKStartFive"
                                android:layout_width="@dimen/px_25"
                                android:layout_height="@dimen/px_25"
                                android:layout_marginRight="@dimen/px_0_5"
                                android:src="@mipmap/kongstart" />
                        </com.zhy.autolayout.AutoLinearLayout>

                    </com.zhy.autolayout.AutoRelativeLayout>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/H7">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/RecommendedBooks_HstjUserHeadImage"
                            android:layout_width="78px"
                            android:layout_height="@dimen/px_78"
                            android:layout_marginLeft="@dimen/px_28"
                            android:layout_marginTop="@dimen/px_26"
                            android:layout_marginBottom="@dimen/px_26" />

                        <TextView
                            android:id="@+id/RecommendedBooks_HstjUserNameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_15"
                            android:text="张金龙"
                            android:textColor="@color/H3"
                            android:textSize="@dimen/px_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_16"
                            android:text="推荐此书"
                            android:textColor="@color/H4"
                            android:textSize="@dimen/px_24" />

                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/RecommendedBooks_HstjUserTuijianNnmText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px_58"
                            android:layout_marginRight="@dimen/px_28"
                            android:layout_marginBottom="@dimen/px_50"
                            android:text="23445推荐"
                            android:textColor="@color/H4"
                            android:textSize="@dimen/px_24" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoRelativeLayout>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_28"
                    android:layout_marginTop="@dimen/px_30"
                    android:layout_marginBottom="@dimen/px_28"
                    android:text="简介"
                    android:textColor="@color/H3"
                    android:textSize="@dimen/px_24" />

                <TextView
                    android:id="@+id/RecommendedBooks_HstjJJText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_10"
                    android:layout_marginTop="@dimen/px_18"
                    android:layout_marginRight="@dimen/px_10"
                    android:layout_marginBottom="@dimen/px_36"
                    android:text="  我是你爸爸" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="74px"
                android:background="@color/H7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px_30"
                    android:text="最新/最热"
                    android:textColor="@color/H3" />

                <ImageView
                    android:id="@+id/RecommendedBooks_ZXZRRefreshButton"
                    android:layout_width="@dimen/px_50"
                    android:layout_height="@dimen/px_50"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px_28"
                    android:src="@mipmap/refresh" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/RecommendedBooks_ZXZRRecy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"></android.support.v7.widget.RecyclerView>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="74px"
                android:background="@color/H7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px_30"
                    android:text="猜你喜欢"
                    android:textColor="@color/H3" />

                <ImageView
                    android:id="@+id/RecommendedBooks_CNXHRefreshButton"
                    android:layout_width="@dimen/px_50"
                    android:layout_height="@dimen/px_50"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px_28"
                    android:src="@mipmap/refresh" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/RecommendedBooks_CNXHRecy"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="#ffffff"></android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="20px"></View>
        </com.zhy.autolayout.AutoLinearLayout>

    </android.support.v4.widget.NestedScrollView>

</com.zhy.autolayout.AutoLinearLayout>