<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/H8"
    android:orientation="vertical"
    tools:context=".view.home.literarytraining.WypxDetalisActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/H3">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/WypxDetalis_ReturnButton"
            android:layout_width="@dimen/px_80"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/px_50"
                android:layout_height="@dimen/px_50"
                android:src="@mipmap/goback" />
        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:id="@+id/WypxDetalis_NameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="文艺培训"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/px_30" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_422">

        <ImageView
            android:id="@+id/WypxDetalis_BackgroundImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_422"
            android:scaleType="fitXY"
            android:tint="#444B4646" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_73"
            android:layout_alignParentBottom="true"
            android:weightSum="3">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/WypxDetalis_JieshaoButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="介绍" />

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/H8"></View>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/WypxDetalis_ZhaoPianButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="照片" />

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/H8"></View>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/WypxDetalis_ShiPinButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="视频" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px_123"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/px_115"
                android:layout_height="@dimen/px_115"
                android:layout_marginLeft="@dimen/px_28" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_28"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式： "
                    android:textColor="@color/H8"
                    android:textSize="@dimen/px_22" />

                <TextView
                    android:id="@+id/WypxDetalis_PhoneNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13995854658"
                    android:textColor="@color/H8"
                    android:textSize="@dimen/px_22" />
                <TextView
                    android:id="@+id/WypxDetalis_SeePhoneNumberButton"
                    android:background="@drawable/youhui_btn"
                    android:gravity="center"
                    android:textSize="18px"
                    android:text="点击查看"
                    android:layout_marginLeft="@dimen/px_16"
                    android:textColor="@color/H8"
                    android:layout_width="@dimen/px_101"
                    android:layout_height="@dimen/px_25" />
            </com.zhy.autolayout.AutoLinearLayout>
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_marginTop="@dimen/px_25"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <TextView
                    android:text="地址："
                    android:textColor="@color/H8"
                    android:textSize="@dimen/px_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/WypxDetalis_AddressText"
                        android:text="地址："
                        android:textColor="@color/H8"
                        android:textSize="@dimen/px_22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/WypxDetalis_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</com.zhy.autolayout.AutoLinearLayout>