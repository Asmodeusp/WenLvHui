<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="115px"
    android:orientation="horizontal"
    android:weightSum="4"
    android:background="#ffffff"
    tools:context=".view.home.features.FeatureOneFragment">
<!--文艺培训-->
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/Featrue_LiteraryTrainingButton"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/px_40"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/literary_training"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/px_10"
            android:layout_gravity="center_horizontal"
            android:text="文艺培训"
            android:textSize="@dimen/px_21"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
<!--文创非遗-->
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/Featrue_IntangibleCulturalHeritageButton"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/intangible_cultural_heritage" />
        <TextView

            android:layout_gravity="center_horizontal"
            android:text="文创非遗"
            android:layout_marginTop="@dimen/px_10"
            android:textSize="@dimen/px_21"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
<!--地方美食-->
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/Featrue_LocalcuisineButton"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/local_cuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/px_10"
            android:layout_gravity="center_horizontal"
            android:text="地方美食"
            android:textSize="@dimen/px_21"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
<!--文旅路线-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginRight="@dimen/px_40"
        android:id="@+id/Featrue_TravelRouteButton"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/travel_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/px_10"
            android:layout_gravity="center_horizontal"
            android:text="文旅路线"
            android:textSize="@dimen/px_21"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>



</com.zhy.autolayout.AutoLinearLayout>