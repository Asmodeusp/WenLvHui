<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/H8"
    android:orientation="vertical"
    tools:context=".view.circle.MyFollowActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/H3">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/MyCollection_ReturnButton"
            android:layout_width="@dimen/px_80"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/px_50"
                android:layout_height="@dimen/px_50"
                android:src="@mipmap/goback" />
        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的关注"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/px_30" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="480px"
                android:scaleType="fitXY"
                android:src="@mipmap/maomi" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_marginLeft="@dimen/px_28"
                    android:layout_marginTop="@dimen/px_30"
                    android:layout_marginRight="@dimen/px_28"
                    android:layout_marginBottom="@dimen/px_20"
                    android:src="@mipmap/touxaing" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="南笙"
                        android:textColor="@color/H5"
                        android:textSize="@dimen/px_24" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_marginTop="@dimen/px_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注：0"
                            android:textColor="@color/H5"
                            android:textSize="@dimen/px_18" />

                        <TextView
                            android:layout_marginLeft="@dimen/px_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粉丝：1"
                            android:textColor="@color/H5"
                            android:textSize="@dimen/px_18" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_2"
                android:layout_marginTop="@dimen/px_30"
                android:background="@color/H4"></View>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_28"
                    android:layout_marginRight="@dimen/px_28"
                    android:text="我的关注"
                    android:textColor="@color/H4"
                    android:textSize="@dimen/px_22" />

                <ImageView
                    android:id="@+id/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/px_28"
                    android:src="@mipmap/more" />
            </com.zhy.autolayout.AutoRelativeLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_28"
                android:layout_marginTop="@dimen/px_30"
                android:layout_marginRight="@dimen/px_28"
                android:orientation="horizontal">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/px_123"
                        android:layout_height="@dimen/px_123"
                        android:layout_marginLeft="@dimen/px_28"
                        android:layout_marginRight="28px"
                        android:src="@mipmap/tou" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_20"
                        android:text="北乔"
                        android:textColor="@color/H5"
                        android:textSize="@dimen/px_20" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_2"
                android:layout_marginTop="@dimen/px_30"
                android:background="@color/H4"></View>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_40">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_28"
                    android:layout_marginRight="@dimen/px_28"
                    android:text="我的动态"
                    android:textColor="@color/H4"
                    android:textSize="@dimen/px_22" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/px_28"
                    android:src="@mipmap/refresh" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_28"
                android:layout_marginTop="@dimen/px_20"
                android:layout_marginRight="@dimen/px_28"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/item_spacePageHead_Image"
                        android:layout_width="64px"
                        android:layout_height="64px"
                        android:src="@mipmap/tou" />


                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_30"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_spacePageNameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="北乔"
                            android:textColor="@color/H5"
                            android:textSize="@dimen/px_24" />

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px_20"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/item_spacePageData"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2019-06-09"
                                android:textColor="@color/H4"
                                android:textSize="@dimen/px_18" />

                        </com.zhy.autolayout.AutoLinearLayout>
                    </com.zhy.autolayout.AutoLinearLayout>


                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:id="@+id/item_spacePageDetalis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_10"
                    android:layout_marginBottom="@dimen/px_10"
                    android:ellipsize="end"
                    android:text="大家觉得我这副火影的手绘怎么样？"
                    android:textColor="@color/H4"
                    android:textSize="@dimen/px_22" />

                <ImageView
                    android:id="@+id/item_spacePageImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_400"
                    android:layout_marginTop="@dimen/px_10"
                    android:scaleType="fitXY"
                    android:src="@mipmap/timg" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/item_activit_oneIsLikeButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/item_activit_oneIsLikeImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/dianzan_pass" />

                        <TextView
                            android:id="@+id/item_activit_oneIsLikeNumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10px"
                            android:text="2"
                            android:textColor="@color/H4"
                            android:textSize="@dimen/px_18" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/item_activit_oneCommentButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/item_activit_oneCommentImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/comment" />

                        <TextView
                            android:id="@+id/item_activit_oneCommentNumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10px"
                            android:text="0"
                            android:textColor="@color/H4"
                            android:textSize="@dimen/px_18" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></com.zhy.autolayout.AutoLinearLayout>


                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="浏览量："
                            android:textColor="@color/H4"

                            android:textSize="@dimen/px_18" />

                        <TextView
                            android:id="@+id/item_activit_oneSeeNumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10px"
                            android:text="2"
                            android:textColor="@color/H4"
                            android:textSize="@dimen/px_18" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_50"></View>
        </com.zhy.autolayout.AutoLinearLayout>

    </android.support.v4.widget.NestedScrollView>
</com.zhy.autolayout.AutoLinearLayout>