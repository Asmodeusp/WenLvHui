<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/H8"
    android:orientation="vertical"
    tools:context=".view.space.SpaceGuanCangFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/SpaceGuanCangImage"
                android:layout_marginRight="@dimen/px_28"
                android:layout_marginTop="@dimen/px_10"
                android:layout_marginLeft="@dimen/px_28"
                android:layout_width="match_parent"
                android:layout_height="440px"
                android:scaleType="centerCrop" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_28"
                android:layout_marginTop="@dimen/px_40"
                android:layout_marginRight="@dimen/px_28"
                android:layout_marginBottom="@dimen/px_42"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/SpaceGuanCangNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="asdfgfa"
                    android:textColor="@color/H5"
                    android:textSize="@dimen/px_24" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_26">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="馆藏地址:"
                        android:textColor="@color/H4"
                        android:textSize="@dimen/px_22" />

                    <TextView
                        android:id="@+id/SpaceGuanCangAddressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_5"
                        android:text="123"
                        android:textColor="@color/H4"
                        android:textSize="@dimen/px_22" />


                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_26">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="场馆面积:"
                        android:textColor="@color/H4"
                        android:textSize="@dimen/px_22" />

                    <TextView
                        android:id="@+id/SpaceGuanCangMianJiText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_5"
                        android:text="123"
                        android:textColor="@color/H4"
                        android:textSize="@dimen/px_22" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_5"
                        android:text="㎡"
                        android:textColor="@color/H4"
                        android:textSize="@dimen/px_22" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_26">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开放时间:"
                        android:textColor="@color/H4"
                        android:textSize="@dimen/px_22" />

                    <TextView
                        android:id="@+id/SpaceGuanCangDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_5"
                        android:text="123"
                        android:textColor="@color/H4"
                        android:textSize="@dimen/px_22" />
                </com.zhy.autolayout.AutoLinearLayout>


                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_26"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话:"
                        android:textColor="@color/H4"
                        android:textSize="@dimen/px_22" />

                    <TextView
                        android:id="@+id/SpaceGuanCangPhoneText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_5"
                        android:text="123"
                        android:textColor="@color/H4"
                        android:textSize="@dimen/px_22" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:background="@color/H7"></View>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_28"
                    android:text="场馆预约"
                    android:textColor="@color/H5"
                    android:textSize="@dimen/px_24" />
            </com.zhy.autolayout.AutoLinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/SpaceGuanCangRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_28"
                android:layout_marginRight="@dimen/px_28"></android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:layout_marginTop="@dimen/px_35"
                android:background="@color/H7"></View>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_28"
                    android:layout_marginTop="@dimen/px_20"
                    android:text="场馆活动"
                    android:textColor="@color/H5"
                    android:textSize="@dimen/px_24" />
            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/SpaceGuanCangHuodongImage"
                android:layout_width="match_parent"
                android:layout_height="428px"
                android:layout_marginLeft="@dimen/px_28"
                android:layout_marginTop="@dimen/px_30"
                android:layout_marginRight="@dimen/px_28"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="@dimen/px_35"
                android:background="@color/H7"></View>

            <TextView
                android:id="@+id/SpaceGuanCangDaoHangButton"
                android:layout_width="@dimen/px_352"
                android:layout_height="@dimen/px_57"
                android:layout_marginTop="@dimen/px_28"
                android:background="@drawable/loginbutton"
                android:gravity="center"
                android:text="导航过去"
                android:textColor="@color/H8"
                android:textSize="@dimen/px_30" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_50"
                android:background="@color/H8"></View>
        </com.zhy.autolayout.AutoLinearLayout>
    </android.support.v4.widget.NestedScrollView>

</com.zhy.autolayout.AutoLinearLayout>